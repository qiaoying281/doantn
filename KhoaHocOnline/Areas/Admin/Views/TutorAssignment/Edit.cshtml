@model KhoaHocOnline.Models.EF.TutorAssignment
@{
    ViewBag.Title = "Edit TutorAssignment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/TutorAssignment" class="nav-link">List</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/TutorAssignment/Edit" class="nav-link">Edit</a>
        </li>
    </ul>
}

<!-- NumberOfStudent Header (Page header) -->
<section class="NumberOfStudent-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Tutor Assignment</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/TutorAssignment">List</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main NumberOfStudent -->
<section class="NumberOfStudent">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit Tutor Assignment</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-NumberOfStudent">
                @using (Html.BeginForm("Edit", "TutorAssignment", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.TutorAssignmentID)
                    <!-- your steps NumberOfStudent here -->
                    <div id="logins-part" class="NumberOfStudent" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="InputTutor">Tutor ID</label>
                            @Html.TextBoxFor(x => x.TutorID, new { @class = "form-control", @placeholder = "Tutor ID" })
                            @Html.ValidationMessageFor(x => x.TutorID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputCourse">Tutor ID</label>
                            @Html.TextBoxFor(x => x.CourseID, new { @class = "form-control", @placeholder = "Course ID" })
                            @Html.ValidationMessageFor(x => x.CourseID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="InputNumberOfStudent">Number Of Student</label>
                            @Html.TextAreaFor(x => x.NumberOfStudent, new { @class = "form-control", @placeholder = "Number Of Student" })
                            @Html.ValidationMessageFor(x => x.NumberOfStudent, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="/admin/TutorAssignment" class="btn btn-danger">Previous</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.NumberOfStudent -->